{
  "version": 2,
  "builds": [
    {
      "src": "server/index.ts",
      "use": "@vercel/node",
      "config": { "runtime": "nodejs22.x" }
    },
    {
      "src": "client/dist/public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "/server/index.ts" }
  ]
}
